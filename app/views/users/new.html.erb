
<div class="loginColumns animated fadeInDown">
        <div class="row">

            <div class="col-md-6">
                <h2 class="font-bold">Welcome to Simon</h2>

                <p>
                    Literally
                </p>

                <p>
                    The Best Job Site
                </p>

                <p>
                    For Grads
                </p>


            </div>
            <div class="col-md-6">
                <div class="ibox-content">
                    
            <%= bootstrap_form_for(@user) do |f| %>
            
            <div class="field">
              <%= f.form_group :gender, label: { text: "Are you a Student or a Corporate?" } do %>
              <p></p>
                  <%= f.radio_button :profile_type, 1, label: "Student",   inline: true %>
                  <%= f.radio_button :profile_type, 2, label: "Corporate", inline: true %>
                <% end %>
          </div>

            <div class="field">
                  <%= f.text_field :firstname, :placeholder => "First name" %> 
            </div>

            <div class="field">
                  <%= f.text_field :lastname, :placeholder => "Last name" %>
            </div>

            <div class="field">
                  <%= f.email_field :email, :placeholder => "me@example.com" %>
            </div>

            <div class="field">
                  <%= f.password_field :password, :placeholder => "Password" %>
                  <%= f.submit "Create account", class: "btn btn-primary block full-width m-b" %>
            </div>


            

        
                <p class="text-muted text-center"><small>Already have an account?</small></p>
                 <a class="btn btn-sm btn-white btn-block" href="/login">Login</a>

            <% end %>


                    
                </div>
            </div>
        </div>
        <hr />
        
    </div>
